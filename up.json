{
  "name": "ciri-auth",
  "profile": "lambda",
  "regions": ["us-west-2"],
  "environment": {
    "DEBUG": "app,db,auth"
  },
  "logs": {
    "stdout": "info",
    "stderr": "info"
  },
  "hooks": {
    "build": "yarn build:up",
    "clean": "rm server.js"
  },
  "proxy": {
    "command": "node server.js"
  },
  "stages": {
    "production": {
      "domain": "auth.memors.me"
    },
    "staging": {
      "domain": "auth-staging.memors.me"
    },
    "development": {
      "proxy": {
        "command": "nodemon index.js"
      }
    }
  }
}
